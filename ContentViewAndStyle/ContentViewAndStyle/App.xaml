<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContentViewAndStyle.App"
             xmlns:views="clr-namespace:ContentViewAndStyle.Views">
    <Application.Resources>
        <Style TargetType="views:MenuItemView">
            <Setter Property="BackgroundColor" Value="White"/>
        </Style>
        <Style x:Key="ImageBankingButton" TargetType="Image">
            <Setter Property="HeightRequest" Value="80"/>
            <Setter Property="VerticalOptions" Value="Start"/>
            <Setter Property="Margin" Value="-10"/>
        </Style>
        <Style x:Key="NameBankingButton" TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
        </Style>
        <Style x:Key="DetailBankingButton" TargetType="Label">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextColor" Value="Gray"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
        </Style>
    </Application.Resources>
</Application>