<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContentViewAndStyle.Views.Pages.MainPage"
             xmlns:Views="clr-namespace:ContentViewAndStyle.Views"
             Title="Elec. Banking"
             Icon="internet_icon">
    <Grid RowDefinitions="1*, 1*, 1*" ColumnDefinitions="*,*" VerticalOptions="Center" Padding="20" RowSpacing="20" ColumnSpacing="20" >
        <Views:MenuItemView Grid.Row="0" Grid.Column="0" BindingContext="{Binding Option1}"/>
        <Views:MenuItemView Grid.Row="0" Grid.Column="1" BindingContext="{Binding Option2}"/>
        <Views:MenuItemView Grid.Row="1" Grid.Column="0" BindingContext="{Binding Option3}"/>
        <Views:MenuItemView Grid.Row="1" Grid.Column="1" BindingContext="{Binding Option4}"/>
        <Views:MenuItemView Grid.Row="2" Grid.Column="0" BindingContext="{Binding Option5}"/>
        <Views:MenuItemView Grid.Row="2" Grid.Column="1" BindingContext="{Binding Option6}"/>
    </Grid>
</ContentPage>